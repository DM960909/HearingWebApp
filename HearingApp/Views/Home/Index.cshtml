        <button class="carousel-control-prev" type="button" data-bs-target="#tinuityCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#tinuityCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>



<div class="w-100 py-5 bg-white">
    <div class="container px-4 px-md-5">
        <div class="row align-items-center justify-content-center g-5">
            
            <!-- Text Section -->
            <div class="col-12 col-md-6">
                <h2 class="fw-bold mb-5 text-start">Welcome to Your Personal Audio Zone</h2>

                <!-- Block 1 -->
                <div class="d-flex align-items-start mb-4 text-start">
                    <img src="~/images/usersound.svg" alt="Tailored Soundscapes" class="me-3 mt-1" style="width: 32px; height: 32px;" />
                    <div>
                        <h5 class="fw-semibold mb-1">Tailored Soundscapes</h5>
                        <p class="text-muted mb-0">
                            Create your ideal environment with immersive nature-inspired sounds — from calming forest ambience to ocean waves, shaped by your needs.
                        </p>
                    </div>
                </div>

                <!-- Block 2 -->
                <div class="d-flex align-items-start mb-4 text-start">
                    <img src="~/images/customise.svg" alt="Smart Customization" class="me-3 mt-1" style="width: 32px; height: 32px;" />
                    <div>
                        <h5 class="fw-semibold mb-1">Smart Customization</h5>
                        <p class="text-muted mb-0">
                            Use intuitive faders to fine-tune elements like soft rain, deep white noise, or higher-pitched tones — giving you full control over what calms you best.
                        </p>
                    </div>
                </div>

                <!-- Block 3 -->
                <div class="d-flex align-items-start text-start">
                    <img src="~/images/usericon.svg" alt="Designed for Focus & Calm" class="me-3 mt-1" style="width: 32px; height: 32px;" />
                    <div>
                        <h5 class="fw-semibold mb-1">Designed for Focus & Calm</h5>
                        <p class="text-muted mb-0">
                            Whether you’re unwinding, working, or navigating a spike, your personalized audio mix supports clarity, calmness, and comfort throughout the day.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Image Section -->
            <div class="col-12 col-md-6 text-center text-md-end">
                <img src="~/images/SoundscapeImage.png" 
                     alt="Audio Zone Preview" 
                     class="img-fluid rounded-4 shadow" 
                     style="object-fit: cover; max-height: 500px; width: 100%;" />
            </div>
        </div>
    </div>
</div>

<div class="w-100 py-6 bg-white px-3 px-md-5" style="padding-top: 6rem; padding-bottom: 6rem;">
    <div class="container-fluid">
        <div class="row align-items-start g-5">
            
            <!-- Left: Large Title -->
            <div class="col-12 col-md-6">
                <h2 class="fw-bold display-5 text-start mb-4">
                    Stay Informed.<br />
                    Stay in Control.<br />
                    Your Dashboard, at a Glance.
                </h2>
            </div>

            <!-- Right: 3 Informative Blocks with Icons -->
            <div class="col-12 col-md-6">

                <!-- Block 1 -->
                <div class="d-flex align-items-start mb-5">
                    <img src="~/images/progress.svg" alt="Track Progress Icon" class="me-3 mt-1" style="width: 32px; height: 32px;" />
                    <div>
                        <h5 class="fw-semibold mb-1">Track Your Progress</h5>
                        <p class="text-muted mb-0">
                            View your tinnitus scores over time with clean graphs and summaries that show improvement, spikes, or emerging trends.
                        </p>
                    </div>
                </div>

                <!-- Block 2 -->
                <div class="d-flex align-items-start mb-5">
                    <img src="~/images/summary.svg" alt="Weekly Summary Icon" class="me-3 mt-1" style="width: 32px; height: 32px;" />
                    <div>
                        <h5 class="fw-semibold mb-1">Weekly Summaries</h5>
                        <p class="text-muted mb-0">
                            Get a bird’s-eye view of how your coping and severity scores evolve with week-by-week breakdowns.
                        </p>
                    </div>
                </div>

                <!-- Block 3 -->
                <div class="d-flex align-items-start">
                    <img src="~/images/insightpattern.svg" alt="Patterns Icon" class="me-3 mt-1" style="width: 32px; height: 32px;" />
                    <div>
                        <h5 class="fw-semibold mb-1">Spot Patterns Instantly</h5>
                        <p class="text-muted mb-0">
                            Easily correlate habits, moods, or routines with tinnitus shifts using smart visual summaries.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="w-100 position-relative"
     style="background: url('/images/cta-background.png') no-repeat center center;
            background-size: cover;
            height: 450px;">
    
    <div class="position-absolute top-0 start-0 mt-4 ms-4">
        <h2 class="text-white display-6 fw-bold text-start">
            Ready to Take Control of<br />Your Tinnitus?
        </h2>
    </div>
</div>
